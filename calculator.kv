Everything:

<CustomButton@Button>:
    font_size: "20dp"
    markup: True
    font_name: "cairo_regular.ttf"

<Everything>:
    rows: 2

    TextInput:
        id: calc_screen
        text: root.equation
        font_name: "Lcd.ttf"
        font_size: "40dp"
        background_color: 23/255, 23/255, 23/225, 1
        foreground_color: root.text_input_color

    GridLayout:
        cols: 4
        rows: 6

        CustomButton:
            text: 'R'
            on_press: root.change_color_theme_to_red()
            color: 255/255, 10/255, 84/255, 1
            background_color: 255/255, 71/255, 126/255, 1
        CustomButton:
            text: 'G'
            on_press: root.change_color_theme_to_green()
            background_color: 180/255, 176/255, 28/255, 1
            color: 238/255, 239/255, 32/255, 1
        CustomButton:
            text: 'B'
            on_press: root.change_color_theme_to_blue()
            background_color: 0, 180/255, 216/255, 1
            color: 173/255, 232/255, 244/255, 1
        CustomButton:
            text: "" # Happy birthday button
            on_press: root.happy_birthday_wish(self)
            background_color: root.surprise_button_bg_color
            color: root.surprise_button_fg_color

        CustomButton:
            text: 'C'
            on_press: root.clear_screen()
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color
        CustomButton:
            text: '('
            on_press: root.add_to_equation(self.text)
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color
        CustomButton:
            text: ')'
            on_press: root.add_to_equation(self.text)
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color
        CustomButton:
            text: '*'
            on_press: root.add_to_equation(self.text)
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color

        CustomButton:
            text: '7'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '8'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '9'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '/'
            on_press: root.add_to_equation(self.text)
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color

        CustomButton:
            text: '4'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '5'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '6'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '-'
            on_press: root.add_to_equation(self.text)
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color

        CustomButton:
            text: '1'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '2'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '3'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '+'
            on_press: root.add_to_equation(self.text)
            color: 1, 1, 1, 1
            background_color: root.operators_bg_color

        CustomButton:
            text: '.'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: '0'
            on_press: root.add_to_equation(self.text)
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: "Del"
            on_press: root.del_last_object()
            color: root.number_pad_fg_color
            background_color: 64/255, 64/225, 64/225, 1
        CustomButton:
            text: "="
            on_press: root.equal_to()
            background_color: root.equal_to_bg_color
            color: 0, 0, 0, 1
            font_size: "30dp"

